<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColor">@color/text</item>
        <!--<item name="selectableItemBackground">@drawable/ripple_effect</item>-->
        <!--<item name="selectableItemBackgroundBorderless">@drawable/ripple_effect_borderless</item>-->
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
    </style>
    <style name="PlaybackButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:padding">@dimen/list_padding</item>
        <item name="android:tint">#000</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>
    <style name="MarqueeTextViewStyle" parent="TextAppearance.AppCompat" >
        <item name="android:ellipsize">marquee</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:freezesText">true</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
    </style>
</resources>
